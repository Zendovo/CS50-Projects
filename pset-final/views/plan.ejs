<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/js/select2.full.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.12/css/select2.min.css">

<h1 class="text-center mt-5 display-3">Meeting Planner</h1>

<div class="jumbotron mt-5 w-75" style="margin: auto;">

    <h1 class="display">Select People</h1>
    <p class="text-muted">to add to the meeting.</p>

    <form class="" method="POST" action="/plan/<%= id %>/sch">
        
        <select class="select-multiple w-50" name="participants" multiple="multiple">
    
            <% friends.forEach((friend, index) => { %>
                <option value="<%= friend.friend_id %>"><%= friend.items[0].friend_name %><br><span class="text-muted">asdsda</span></option>
            <% }) %>
    
        </select><br>

        <button class="mt-3 btn btn-primary" type="submit">Next</button>

    </form>

</div>

<script>
    $(document).ready(function() {
        $('.select-multiple').select2();
    });
</script>